{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "../../dist/out-tsc",
    "types": ["node"],

    "moduleResolution": "node",
		"isolatedModules": true,
		"declaration": true,
		"strict": true,

		// Node 12
		"module": "commonjs",
		"target": "ES2019",
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
