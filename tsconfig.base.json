{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@ts-pipeline/core": ["libs/core/src/index.ts"],
      "@ts-pipeline/react-renderer": ["libs/react-renderer/src/index.ts"],
      "@ts-pipeline/step-increment": ["libs/steps/increment/src/index.ts"],
      "@ts-pipeline/step-logs": ["libs/steps/logs/src/index.ts"],
      "@ts-pipeline/step-shell": ["libs/steps/shell/src/index.ts"],
      "@ts-pipeline/task": ["libs/task/src/index.ts"],
      "@ts-pipeline/ts-core": ["libs/ts-core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
