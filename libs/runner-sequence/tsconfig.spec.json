{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "jest.config.ts",
    "tests/*.test.ts",
    "tests/*.spec.ts",
    "tests/*.test.tsx",
    "tests/*.spec.tsx",
    "tests/*.test.js",
    "tests/*.spec.js",
    "tests/*.test.jsx",
    "tests/*.spec.jsx",
    "tests/*.d.ts"
  ]
}
